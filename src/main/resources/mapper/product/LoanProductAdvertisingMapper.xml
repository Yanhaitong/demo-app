<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yht.demo.mapper.product.LoanProductAdvertisingMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yht.demo.entity.model.product.LoanProductAdvertising">
        <id column="id_" property="id"/>
        <result column="product_info_id" property="productInfoId"/>
        <result column="product_url" property="productUrl"/>
        <result column="cover_" property="cover"/>
        <result column="type_" property="type"/>
        <result column="client_name" property="clientName"/>
        <result column="channel_name" property="channelName"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <select id="getHomePageAdvertisingList" resultType="com.yht.demo.entity.dto.product.LoanProductAdvertisingReturnDTO">
        SELECT
            product_info_id as productId,
            product_url as productUrl,
            cover_ as cover
        FROM
            loan_product_advertising
        WHERE
        client_name = #{clientName}
        and channel_name = #{channelName}
        and type_ = #{type}
    </select>

    <select id="getStartAdvertising" resultType="com.yht.demo.entity.dto.product.LoanProductAdvertisingReturnDTO">
        SELECT
            product_info_id as productId,
            product_url as productUrl,
            cover_ as cover
        FROM
            loan_product_advertising
        WHERE
        client_name = #{clientName}
        and channel_name = #{channelName}
        and type_ = 0
        limit 1
    </select>


</mapper>
